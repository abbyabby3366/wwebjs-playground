{
  "name": "whatsapp-chat-portal",
  "version": "1.0.0",
  "description": "Modern WhatsApp Chat Portal using SvelteKit and Skeleton UI",
  "scripts": {
    "dev": "node server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "nodemon server.js",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "check": "cd frontend && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "cd frontend && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "start": "node server.js",
    "test": "node test-client.js",
    "test:client": "node test-client.js"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/ios": "^7.4.3",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "mongodb": "^6.18.0",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "whatsapp-web.js": "^1.23.0"
  }
}